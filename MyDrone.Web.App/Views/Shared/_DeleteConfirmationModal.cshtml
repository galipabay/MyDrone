@model int

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" action="@Url.Action("DeleteDeviceConfirmed", "Seller")">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Silme Onayı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <div class="modal-body">
                    <p>Bu ürünü silmek istediğinize emin misiniz?</p>
                    <div class="mb-3">
                        <label for="deleteReason" class="form-label">Silme nedeni:</label>
                        <textarea name="DeleteReason" class="form-control" required></textarea>
                    </div>
                    <input type="hidden" name="id" value="@Model" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
