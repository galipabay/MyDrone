<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyDrone</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body { font-family: Arial, sans-serif; }
        .sidebar { width: 250px; }
        .main-content { margin-left: 260px; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-dark bg-dark w-100">
                <a class="navbar-brand" href="#">sahibinden.com</a>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Kelime, ilan no veya mağaza adı ile ara" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Detaylı Arama</button>
                </form>
                <button class="btn btn-primary ml-2">Giriş Yap</button>
                <button class="btn btn-secondary ml-2">Hesap Aç</button>
            </nav>
        </div>
        <div class="row">
            <div class="col-2 sidebar bg-light">
                <ul class="nav flex-column mt-3">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Acil Acil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Son 48 Saat / 1 Hafta / 1 Ay</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Oto360</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Emlak360</a>
                    </li>
                    <!-- Diğer menü elemanları burada yer alacak -->
                </ul>
            </div>
            <div class="col-10 main-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
