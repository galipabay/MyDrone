@model MyDrone.Kernel.Models.Device

@{
    ViewData["Title"] = "Cihaz Ekle";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <form asp-action="DeviceAdd" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <!-- Marka -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Brand" class="control-label"></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <!-- Model -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <!-- Hız -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Speed" class="control-label"></label>
                            <input asp-for="Speed" class="form-control" type="number" />
                            <span asp-validation-for="Speed" class="text-danger"></span>
                        </div>

                        <!-- Havada Kalma Süresi -->
                        <div class="col-md-6 form-group">
                            <label asp-for="AirTime" class="control-label"></label>
                            <input asp-for="AirTime" class="form-control" type="number" />
                            <span asp-validation-for="AirTime" class="text-danger"></span>
                        </div>

                        <!-- Kamera Kalitesi -->
                        <div class="col-md-6 form-group">
                            <label asp-for="CamQuality" class="control-label"></label>
                            <input asp-for="CamQuality" class="form-control" />
                            <span asp-validation-for="CamQuality" class="text-danger"></span>
                        </div>

                        <!-- Gece Görüşü -->
                        <div class="col-md-6 form-group">
                            <label asp-for="NightVision" class="control-label"></label>
                            <input asp-for="NightVision" class="form-control" type="checkbox" />
                            <span asp-validation-for="NightVision" class="text-danger"></span>
                        </div>

                        <!-- Maksimum İrtifa -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Altitude" class="control-label"></label>
                            <input asp-for="Altitude" class="form-control" type="number" />
                            <span asp-validation-for="Altitude" class="text-danger"></span>
                        </div>

                        <!-- Renk -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Color" class="control-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>

                        <!-- Menzil -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Range" class="control-label"></label>
                            <input asp-for="Range" class="form-control" type="number" />
                            <span asp-validation-for="Range" class="text-danger"></span>
                        </div>

                        <!-- Yakıt Türü -->
                        <div class="col-md-6 form-group">
                            <label asp-for="FuelType" class="control-label"></label>
                            <select asp-for="FuelType" class="form-control">
                                <option value="1">Gas</option>
                                <option value="2">Electric</option>
                                <option value="3">Hybrid</option>
                            </select>
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>

                        <!-- Fiyat -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" type="number" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Açıklama -->
                        <div class="col-md-12 form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Resim -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" class="form-control" type="file" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Video -->
                        <div class="col-md-6 form-group">
                            <label class="form-control-plaintext">Video Url (YouTube Recommended)</label>
                            <label asp-for="Video" class="control-label"></label>
                            <input asp-for="Video" class="form-control" />
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>

                        <!-- Konum Bilgileri -->
                        <div class="col-md-6 form-group">
                            <label asp-for="Country" class="control-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Province" class="control-label"></label>
                            <input asp-for="Province" class="form-control" />
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="District" class="control-label"></label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Street" class="control-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <!-- Cihaz Durumu (Kiralık / Satılık) -->
                        <div class="col-md-6 form-group">
                            <label class="control-label">Cihaz Durumu</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Status" value="true" id="kiralik">
                                <label class="form-check-label" for="kiralik">Kiralık</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Status" value="false" id="satilik">
                                <label class="form-check-label" for="satilik">Satılık</label>
                            </div>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-3">Cihazı Ekle</button>
                </form>

                <a href="/devices" class="btn btn-secondary btn-block mt-2">Geri Dön</a>
            </div>
        </div>
    </div>
</div>
