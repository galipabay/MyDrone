@model MyDrone.Kernel.Models.Device

@{
    ViewData["Title"] = "Device Details";
}

<div class="container">
    <div class="details-container">
        <h2>@Model.Brand @Model.Model</h2>

        <a href="@Url.Action("EditDevice", "Seller")" class="btn btn-secondary">Düzenle</a>
        <a href="@Url.Action("DeleteDevice", "Seller")" class="btn btn-secondary">Sil</a>
        <table class="table">
            <tbody>
                <tr><th>Device Number</th><td>@Model.DeviceNo</td></tr>
                <tr><th>Speed</th><td>@Model.Speed km/h</td></tr>
                <tr><th>Air Time</th><td>@Model.AirTime min</td></tr>
                <tr><th>Camera Quality</th><td>@Model.CamQuality</td></tr>
                <tr><th>Night Vision</th><td>@(Model.NightVision ? "Yes" : "No")</td></tr>
                <tr><th>Altitude</th><td>@Model.Altitude m</td></tr>
                <tr><th>Color</th><td>@Model.Color</td></tr>
                <tr><th>Range</th><td>@Model.Range km</td></tr>
                <tr><th>Fuel Type</th><td>@Model.FuelType</td></tr>
                <tr><th>Price</th><td>$@Model.Price</td></tr>
                <tr><th>Status</th><td>@(Model.Status ? "Kiralık" : "Satılık")</td></tr>
                <tr><th>Country</th><td>@Model.Country</td></tr>
                <tr><th>City</th><td>@Model.City</td></tr>
                <tr><th>Province</th><td>@Model.Province</td></tr>
                <tr><th>District</th><td>@Model.District</td></tr>
                <tr><th>Street</th><td>@Model.Street</td></tr>
                <tr><th>Description</th><td>@Model.Description</td></tr>
                <tr>
                    <th>Image</th>
                    <td>
                        @if (Model.Image != null && Model.Image.Length > 0)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="Device Image" style="max-width:200px;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Video</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.Video))
                        {
                            <video width="320" height="240" controls>
                                <source src="@Model.Video" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        }
                        else
                        {
                            <span>No Video Available</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="@Url.Action("Devices", "Seller")" class="btn btn-secondary">Ürünlerime Geri Dön</a>
</div>
