@model List<DeviceDetailViewModel>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyDrone - Ana Sayfa</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .carousel-item img {
            height: 250px;
            object-fit: cover;
        }

        .section-title {
            margin: 20px 0;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .infinite-scroll {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .card:hover {
            transform: scale(1.03);
            transition: transform 0.3s;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Son Görüntülenen İlanlar -->
        <h2 class="section-title">Son Görüntülenen İlanlar</h2>
        <div id="recentlyViewedCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    <div class="carousel-item @if (item.IsFavorited) { <text>active</text> }">
                        <img src="@item.Device.Image" class="d-block w-100" alt="İlan">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#recentlyViewedCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Önceki</span>
            </a>
            <a class="carousel-control-next" href="#recentlyViewedCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Sonraki</span>
            </a>
        </div>

        <!-- Haftanın Popüler İlanları -->
        <h2 class="section-title">Haftanın Popüler İlanları</h2>
        <div id="popularCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    <div class="carousel-item @if (item.IsFavorited) { <text>active</text> }">
                        <img src="@item.Device.Image" class="d-block w-100" alt="Popüler">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#popularCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Önceki</span>
            </a>
            <a class="carousel-control-next" href="#popularCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Sonraki</span>
            </a>
        </div>

        <!-- Genel İlanlar -->
        <h2 class="section-title">Tüm İlanlar</h2>
        <div class="infinite-scroll" id="generalListings">
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="@item.Device.Image" class="card-img-top" alt="İlan">
                    <div class="card-body">
                        <h5 class="card-title">@item.Device.Brand @item.Device.Model</h5>
                        <p class="card-text">@item.Device.Description</p>
                        <p class="card-text">Fiyat: @item.Device.Price</p>

                        <!-- Favori Butonu -->
                        @if (!item.IsSeller)
                        {
                            <button class="btn btn-outline-danger" id="favoriteButton-@item.Device.Id" data-device-id="@item.Device.Id">
                                <i class="fa @(item.IsFavorited ? "fa-heart" : "fa-heart-o")" aria-hidden="true"></i> Favoriye Ekle
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Infinite Scroll için basit bir örnek
        let page = 1;
        window.addEventListener('scroll', () => {
            if (window.innerHeight + window.scrollY >= document.body.offsetHeight - 500) {
                loadMoreListings();
            }
        });

        function loadMoreListings() {
            page++;
            const generalListings = document.getElementById('generalListings');
            for (let i = 0; i < 4; i++) {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="İlan">
                    <div class="card-body">
                        <h5 class="card-title">Yeni Drone Model ${page}-${i}</h5>
                        <p class="card-text">Fiyat: ${4000 + i * 500} TL</p>
                    </div>
                `;
                generalListings.appendChild(card);
            }
        }
    </script>
</body>
</html>
